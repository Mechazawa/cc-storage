{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "types": ["@typescript-to-lua/language-extensions", "lua-types/core/string", "lua-types/special/5.0"],
    "strict": true
  },
  "tstl": {
    "buildMode": "default",
    "luaTarget": "universal",
    "luaBundleEntry": "src/index.ts",
    "luaBundle": "startup.lua",
    "measurePerformance": true,
    "noHeader": true
  }
}
