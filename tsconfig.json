{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "types": ["@typescript-to-lua/language-extensions"],
    "strict": true
  },
  "tstl": {
    "buildMode": "default",
    "luaTarget": "universal",
    "luaBundleEntry": "src/index.ts",
    "luaBundle": "startup.lua",
    "measurePerformance": true,
    "noHeader": true
  }
}